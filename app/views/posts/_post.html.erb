<div class="wrapper my-posts">
  <div class="user">
    <div class="avatar">
        <% if post.user.image.attached? %>
        <%= image_tag post.user.image, :style => "width: 40px; height: 40px; border-radius: 5px;" %>
        <% end %>
    </div>
    <div class="user-name">
      <div>
        <a href= "" ><span style="font-weight: bold;"><%= post.user.nickname %></span></a>
      </div>
      <div>
        <span class="time" style="font-size: 13px; color: #606770;"><%= time_ago_in_words(post.created_at) %></span>
      </div>
    </div>
  </div>
  <hr>
  <div class="content">
    <div class="container">
      <% if(post.typing == 'ask') %>
      <span class="badge badge-primary float-right">Ask</span>
      <%else%>
        <span class="badge badge-success float-right">Share</span>
      <%end%>
    </div>
    <h2 style="box-sizing: border-box; padding-top: 10px;"><%= post.title if post.title.present? %></h2>
    <p style="font-size: 14px; box-sizing: border-box; padding: 0 10px;">
      <%= post.content %>
    </p>
    <div class="detail-link">
      <%= link_to t(".details"), post%>
    </div>
  </div>
  <div class="img-post">
      <% if post.image_url %>
        <%= image_tag post.image_url, :style => "width: 100%; height: 100%; border-radius: 5px;" %>
      <% end %>
  </div>
  <div class="interactive">
  </div>
</div>
